# PayPal Configuration for Docker
# Copy this file to .env and fill in your actual credentials

# PayPal Sandbox Credentials (for development)
PAYPAL_CLIENT_ID=your_sandbox_client_id_here
PAYPAL_CLIENT_SECRET=your_sandbox_client_secret_here
PAYPAL_WEBHOOK_ID=your_sandbox_webhook_id_here

# PayPal Production Credentials (for production)
PAYPAL_CLIENT_ID_PROD=your_live_client_id_here
PAYPAL_CLIENT_SECRET_PROD=your_live_client_secret_here

# Frontend PayPal Client IDs
VITE_PAYPAL_CLIENT_ID=your_sandbox_client_id_here
VITE_PAYPAL_CLIENT_ID_PROD=your_live_client_id_here

# Cron Job Configuration
# Cleanup schedule (cron format: "minute hour day month weekday")
# Examples:
#   "*/5 * * * *"   - Every 5 minutes
#   "0 */2 * * *"   - Every 2 hours
#   "0 0 * * *"     - Daily at midnight
#   "0 0 * * 0"     - Weekly on Sunday at midnight
CLEANUP_SCHEDULE=*/5 * * * *

# Enable/disable cleanup cron job (true/false)
ENABLE_CLEANUP_CRON=true

# Wishlist Notification Jobs
# Enable/disable wishlist sale checker (runs hourly)
WISHLIST_SALE_CHECK_ENABLED=true
# Enable/disable wishlist stock checker (runs every 30 minutes)
WISHLIST_STOCK_CHECK_ENABLED=true

# Timezone for cron jobs (optional, defaults to UTC)
TZ=UTC
# ShipStation Custom Store Configuration
SHIPSTATION_USERNAME=your_shipstation_username
SHIPSTATION_PASSWORD=your_shipstation_password
SHIPSTATION_ENABLED=true

# Email Service Configuration (SMTP)
# For production, set these values in your .env file
# Security: These are NOT exposed in the admin panel for safety
EMAIL_USE_ENV=true
EMAIL_TEST_MODE=true
EMAIL_ENABLED=true

# SMTP Server Settings (Gmail, SendGrid, AWS SES, etc.)
# Use either SMTP_* or EMAIL_SMTP_* naming convention
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here

# Alternative naming (also supported):
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=465
# EMAIL_SMTP_USER=your-email@gmail.com
# EMAIL_SMTP_PASSWORD=your-app-password-here

# Email From Settings
EMAIL_FROM_EMAIL=noreply@simfab.com
EMAIL_FROM_NAME=SimFab

# Test Mode (optional - redirects emails in test mode)
EMAIL_TEST_EMAIL=test@example.com

# Rate Limiting
EMAIL_DAILY_LIMIT=1000
EMAIL_RATE_LIMIT=10

# Instructions:
# 1. Copy this file to .env: cp env.example .env
# 2. Get your PayPal sandbox credentials from: https://developer.paypal.com/
# 3. For email service:
#    - Set EMAIL_TEST_MODE=false for production
#    - Configure EMAIL_SMTP_HOST, EMAIL_SMTP_USER, EMAIL_SMTP_PASSWORD
#    - For Gmail: Use App Password (not your regular password)
# 4. Replace the placeholder values with your actual credentials
# 5. Run: docker-compose up