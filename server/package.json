{
  "name": "simfab-server",
  "version": "1.0.0",
  "description": "Express.js server for SimFab products API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:build": "tsc && npm start",
    "postinstall": "npm run build",
    "migrate:up": "ts-node src/migrations/migrate.ts up",
    "migrate:down": "ts-node src/migrations/migrate.ts down",
    "migrate:status": "ts-node src/migrations/migrate.ts status",
    "db:test": "ts-node -e \"import('./src/config/database').then(m => m.testConnection())\""
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "connect-pg-simple": "^9.0.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.17.3",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.11.3",
    "typescript": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/paypal__checkout-server-sdk": "^1.0.8",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
